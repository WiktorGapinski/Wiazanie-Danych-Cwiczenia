<Window x:Class="Wiazanie_Danych.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wiazanie_Danych"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="800">
    <Grid>
        <StackPanel>
            <Slider x:Name="rozmiarTekstu" Minimum="10" Value="15" Maximum="45"/>
            <TextBlock FontSize="{Binding Value, ElementName=rozmiarTekstu}"><Run Text="Testujemy wiązanie danych"/></TextBlock>
        </StackPanel>
    </Grid>
</Window>
